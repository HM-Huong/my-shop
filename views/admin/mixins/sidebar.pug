include sidebar-item


mixin sidebar({links})
	.container-fluid
		.row.flex-nowrap
			.col-auto.col-md-3.col-xl-2.px-sm-2.px-0.bg-dark.min-vh-100
				.d-flex.flex-column.align-items-center.align-items-sm-start.px-3.pt-2.text-white.vh-100.position-fixed
					a.d-flex.align-items-center.pb-3.mb-md-0.me-md-auto.text-white.text-decoration-none(href=ADMIN_PATH + '/dashboard')
						span.fs-4.d-none.d-sm-inline.fw-bold Dashboard
					ul#menu.nav.nav-pills.flex-column.mb-sm-auto.mb-0.align-items-center.align-items-sm-start
						each link in links
							+nav-item(link)

						//- /////////////////////////////////////////////////////////////
						li
							a.nav-link.px-0.align-middle(href='#submenu1' data-bs-toggle='collapse').text-white
								i.fs-4.bi-speedometer2
								span.ms-1.d-none.d-sm-inline Dashboard
							ul#submenu1.collapse.show.nav.flex-column.ms-1(data-bs-parent='#menu')
								li.w-100
									a.nav-link.px-0(href='#').text-white
										span.d-none.d-sm-inline Item
										| 1
								li
									a.nav-link.px-0(href='#').text-white
										span.d-none.d-sm-inline Item
										| 2
						li
							a.nav-link.px-0.align-middle(href='#').text-white
								i.fs-4.bi-table
								span.ms-1.d-none.d-sm-inline Orders
						li
							a.nav-link.px-0.align-middle(href='#submenu2' data-bs-toggle='collapse').text-white
								i.fs-4.bi-bootstrap
								span.ms-1.d-none.d-sm-inline Bootstrap
							ul#submenu2.collapse.nav.flex-column.ms-1(data-bs-parent='#menu')
								li.w-100
									a.nav-link.px-0(href='#').text-white
										span.d-none.d-sm-inline Item
										| 1
								li
									a.nav-link.px-0(href='#').text-white
										span.d-none.d-sm-inline Item
										| 2
						li
							a.nav-link.px-0.align-middle(href='#submenu3' data-bs-toggle='collapse').text-white
								i.fs-4.bi-grid
								span.ms-1.d-none.d-sm-inline Products
							ul#submenu3.collapse.nav.flex-column.ms-1(data-bs-parent='#menu')
								li.w-100
									a.nav-link.px-0(href='#').text-white
										span.d-none.d-sm-inline Product
										| 1
								li
									a.nav-link.px-0(href='#').text-white
										span.d-none.d-sm-inline Product
										| 2
								li
									a.nav-link.px-0(href='#').text-white
										span.d-none.d-sm-inline Product
										| 3
								li
									a.nav-link.px-0(href='#').text-white
										span.d-none.d-sm-inline Product
										| 4
						li
							a.nav-link.px-0.align-middle(href='#').text-white
								i.fs-4.bi-people
								span.ms-1.d-none.d-sm-inline Customers
					hr
					.dropdown.pb-4
						a#dropdownUser1.d-flex.align-items-center.text-white.text-decoration-none.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false')
							img.rounded-circle(src='https://github.com/mdo.png' alt='hugenerd' width='30' height='30')
							span.d-none.d-sm-inline.mx-1 loser
						ul.dropdown-menu.dropdown-menu-dark.text-small.shadow(aria-labelledby='dropdownUser1')
							li
								a.dropdown-item(href='#').text-white New project...
							li
								a.dropdown-item(href='#').text-white Settings
							li
								a.dropdown-item(href='#').text-white Profile
							li
								hr.dropdown-divider
							li
								a.dropdown-item(href='#').text-white Sign out
			.col.py-3
				block